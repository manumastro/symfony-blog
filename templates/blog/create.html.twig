{% extends 'base.html.twig' %}

{% block body %}
    <h1>Crea un articolo!</h1>

    <form action="" method="post" class="d-flex flex-column">
        <input class="mb-3 rounded p-3" type="text" name="title" placeholder="Titolo dell'articolo">
        <textarea class="mb-3 rounded p-3" name="content" placeholder="Contenuto dell'articolo"></textarea>
        <input class="mb-3 rounded p-3" type="text" name="image" placeholder="immagine dell'articolo">
        <button type="submit">Invia</button>

    </form>
{% endblock %}